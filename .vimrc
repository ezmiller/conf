" General
set history=700
filetype on
filetype plugin on
filetype indent on
set autoread " Read when a file has changed outside of VI

" UI
set ruler
set hlsearch
set incsearch
set noerrorbells
set novisualbell

" Colors & Fonts
colorscheme elflord
set encoding=utf8
set ffs=unix,mac,dos

" Text, tab, indent
set shiftwidth=4
set tabstop=4
set lbr
set tw=500
set ai " Auto indent
set wrap " Wrap lines
